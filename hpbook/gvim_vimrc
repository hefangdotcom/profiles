

set nocompatible
source $VIMRUNTIME/vimrc_example.vim
source $VIMRUNTIME/mswin.vim
behave mswin

"set fencs=utf-8,gbk
"set fileencoding=gbk, utf-8, utf-16, big5
let MultipleSearchMaxColors=256
set go+=a 
"autocmd BufEnter * :cd %:p:h
set shortmess=I  "Sorry, No money for Uganda children
colorscheme darkblue
set encoding=utf-8
set langmenu=en_US.UTF-8
set fileencoding=utf-8
set fileencodings=ucs-bom,utf9,prc
set guifontwide=NSimsun:h9
set formatoptions=1
set lbr
set nobackup nowritebackup
set backupdir=.\\_backup,.,\\tmp 
set directory=.,.\\_backup,\\tmp
set autochdir
"ignore whitespace etc 
set diffopt+=iwhite

"invisible characters
nnoremap \tl :set invlist list?<CR>
nmap <F2> \tl<cr>
map <f3> :WMToggle<cr>
map <f4> :set spell!<cr>
map <f5> :mks! D:\Luc\vim.sess<cr>
map <f6> :source D:\Luc\vim.sess<cr>
map <f7> :set guioptions+=m<cr> 
map <f8> :set guioptions-=m<cr> 

nmap <f9> :tabnext<cr>
nnoremap \th :set invhls hls?<CR>
nmap <f10> \th<cr>


"line wrap
nnoremap \tm :set invwrap wrap?<CR>
nmap <f11> \tm<cr>

map <f12> :set number!<cr>
map <C-t> :tabnew<cr> 

set tabstop=4

unmap <c-a>
